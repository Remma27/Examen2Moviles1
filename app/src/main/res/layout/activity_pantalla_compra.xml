<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".PantallaCompra">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-black"
        android:text="Compra"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compania" />

    <EditText
        android:id="@+id/txtCompania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:editable="false"
        android:clickable="false" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entregar" />

    <EditText
        android:id="@+id/txtEntregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:editable="false"
        android:clickable="false"/>

    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Producto"
        android:backgroundTint="#00FF00"
        android:textColor="#000000" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Fila 1 -->
        <TableRow>

            <TextView
                android:text="Codigo"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/txtCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:editable="false"
                android:clickable="false" />

        </TableRow>

        <!-- Fila 2 -->
        <TableRow>

            <TextView
                android:text="Producto"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/txtProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:editable="false"
                android:clickable="false" />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow>

            <TextView
                android:text="Precio Unitario"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/txtPrecioUnitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:editable="false"
                android:clickable="false" />
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>

            <TextView
                android:text="Cantidad"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/txtCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:editable="false"
                android:clickable="false"/>
        </TableRow>

        <!-- Fila 5 -->
        <TableRow>

            <TextView
                android:text="Descuento %"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/txtDescuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:editable="false"
                android:clickable="false"/>


        </TableRow>

        <!-- Fila 6 -->
        <TableRow>

            <TextView
                android:text="Sub Total"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/txtSubTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:editable="false"
                android:clickable="false" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/btnCancelarCompra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar Compra"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:gravity="center" />

        <!-- Botón Aplicar -->
        <Button
            android:id="@+id/btnAplicarCompra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aplicar Compra"
            android:backgroundTint="#0000FF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:gravity="center" />

    </LinearLayout>


</LinearLayout>